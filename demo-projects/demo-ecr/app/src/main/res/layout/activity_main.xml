<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:flexWrap="wrap">

            <Button
                android:id="@+id/btnCreateGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Create Group"
                android:textColor="#FFF"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/btnRemoveGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Remove Group"
                android:textColor="#FFF"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/btnScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Scan"
                android:textColor="#FFF"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/btnConnectionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Con Info"
                android:textColor="#FFF"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/btnSocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Send Payment Request"
                android:textColor="#FFF"
                app:layout_flexGrow="1" />

        </com.google.android.flexbox.FlexboxLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5"
            android:background="#000"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="P2P Demo"
                android:textColor="#FFF"
                android:textSize="9sp" />
        </ScrollView>

    </LinearLayout>

</layout>